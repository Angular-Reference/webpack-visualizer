{
  "name": "webpack-visualizer",
  "version": "1.0.1",
  "author": "Chris Bateman (http://cbateman.com/)",
  "license": "MIT",
  "scripts": {
    "dev": "webpack-dev-server --config webpack.dev.js",
    "prebuild": "rm -rf build && mkdir build",
    "build": "webpack --config webpack.prod.js && babel-node serverRender.js",
    "postbuild": "cp src/style.css test/stats-demo.json build",
    "lint": "eslint src --ext .js,.jsx",
    "version": "npm run lint && npm run build",
    "postversion": "npm run publishSite",
    "publishSite": "git checkout gh-pages && mv build/* . && git add . && git commit -m 'release' && git push origin gh-pages && rm * && git checkout master"
  },
  "dependencies": {
    "babel": "^5.8.23",
    "d3": "^3.5.6",
    "prettysize": "0.0.3",
    "react": "^0.14.0",
    "react-dom": "^0.14.0"
  },
  "devDependencies": {
    "babel-core": "^5.8.25",
    "babel-loader": "^5.3.2",
    "eslint": "^1.6.0",
    "eslint-plugin-react": "^3.5.1",
    "merge": "^1.2.0",
    "webpack": "^1.12.2",
    "webpack-dev-server": "^1.12.0"
  },
  "engines": {
    "npm": ">=2.13.0"
  },
  "private": true
}
